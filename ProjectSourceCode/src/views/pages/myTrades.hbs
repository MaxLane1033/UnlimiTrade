<style>
    body {
        background: linear-gradient(to right, #0f2027, #203a43, #2c5364);
        font-family: Arial, sans-serif;
        color: white;
    }

    h2 {
        margin-left: 577px;
        margin-top: 50px;
        color: white;
        text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5);
    }

    form {
        margin-left: 555px;
        padding: 20px;
        border-radius: 10px;
        width: 600px;
    }

    .form-label {
        color: white;
        font-weight: bold;
    }

    .form-control {
        background: rgba(255, 255, 255, 0.3);
        border: none;
        padding: 10px;
        border-radius: 5px;
        color: white;
        width: 100%;
    }


    .btn-primary {
        background-color: rgba(255, 255, 255, 0.3);
        border: none;
        color: white;
        font-weight: bold;
    }

    .btn-primary:hover {
        background-color: rgba(255, 255, 255, 0.5);
    }
    
    p {
        margin-left: ;
    }

    a {
        color: #00c6ff;
    }
</style>
<div class="container mt-4">
  <h2 class="mb-4">My Trades</h2>

  {{#if error}}
    <div class="alert alert-danger">{{error}}</div>
  {{/if}}

  {{#if trades.length}}
    <div class="row row-cols-1 row-cols-md-2 g-4">
      {{#each trades}}
        <div class="col">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title">Trade with {{#ifEquals ../user.id sender_id}} {{receiver_username}} {{else}} {{sender_username}} {{/ifEquals}}</h5>
              <p class="card-text"><strong>Message:</strong> {{message}}</p>
              <p class="card-text"><strong>Status:</strong> {{status}}</p>

              <div class="row">
                <div class="col-md-6 text-center">
                  <p><strong>Offered Item:</strong></p>
                  <img src="{{offered_item_image}}" class="img-fluid" alt="Offered Item">
                  <p>{{offered_item_name}}</p>
                </div>
                <div class="col-md-6 text-center">
                  <p><strong>Requested Item:</strong></p>
                  <img src="{{requested_item_image}}" class="img-fluid" alt="Requested Item">
                  <p>{{requested_item_name}}</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <p style="margin-left: 495px; color: white;">You haven't been involved in any trades yet.</p>
  {{/if}}
</div>

{{> footer}}
