<style>
  .content {
    display: flex;
    padding: 20px;
    gap: 30px;
  }

  .filters {
    width: 220px;
    background: rgba(255, 255, 255, 0.1);
    padding: 15px;
    border-radius: 10px;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.3);
  }

  .filters label {
    display: block;
    margin-top: 10px;
    margin-bottom: 5px;
  }

  .filters input,
  .filters select {
    width: 100%;
    padding: 8px;
    border-radius: 5px;
    border: none;
    margin-bottom: 10px;
  }

  .items-section {
    flex-grow: 1;
  }

  .items-grid {
    display: grid;
    grid-template-columns: repeat(3,1fr);
    gap: 20px;
    margin-top: 20px;
    max-width: 960px;
    margin-left: auto;
    margin-right: auto;
  }

  .item-card {
    background: rgba(255, 255, 255, 0.1);
    padding: 15px;
    border-radius: 10px;
    text-align: center;
    width: 90%;
    max-width: 280px;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.3);
  }

  .item-card img {
    width: 100%;
    height: 150px;
    object-fit: contain;
    margin-bottom: 10px;
    background-color: #111;
  }

  .pagination {
    text-align: center;
    margin: 20px 0;
  }

  .pagination span {
    margin: 0 5px;
    cursor: pointer;
  }
</style>

<body>

  <div class="content">
    <div class="filters">
      <h3>Filters</h3>

      <label for="category">Category</label>
      <select id="category" name="category" class="form-control">
        <option value="">-- Select --</option>
        <option value="Electronics">Electronics</option>
        <option value="Books">Books</option>
        <option value="Clothing">Clothing</option>
        <option value="Toys">Games</option>
        <option value="Sports">Other</option>
        <option value="Home Goods">Other</option>
      </select>

      
    </div>

    <div class="items-section">
      <h2>Items Available for Trade</h2>

      <div class="items-grid">
        {{#if items.length}}
          {{#each items}}
            <div class="item-card">
              <img src="{{#if image_path}}{{image_path}}{{else}}https://via.placeholder.com/100{{/if}}" alt="{{name}}">
              <strong>{{name}}</strong>
              <p>{{description}}</p>
              <form action="/trade/{{item_id}}" method="GET" style="margin: 0;">
                <button type="submit" class="btn btn-primary">Trade Now</button>
              </form>
            </div>
          {{/each}}
        {{else}}
          <p style="grid-column:1 / -1; text-align:center;">
            No items posted yet â€” come back later!
          </p>
        {{/if}}
      </div>
    </div>
  </div>
</body>
